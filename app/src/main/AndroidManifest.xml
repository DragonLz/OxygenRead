        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".UI.Acitvity.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.Acitvity.MainActivity"
            android:label="@string/app_name" >

        </activity>
        <activity
            android:name=".UI.Acitvity.AboutActivity"
            android:label="@string/app_name" >

        </activity>
        <activity android:name=".UI.Acitvity.WelcomeActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>

        <activity android:name=".UI.Acitvity.FindMovieActivity"></activity>
        <activity android:name=".UI.Acitvity.FindCinameActivity"></activity>
        <activity android:name=".UI.Acitvity.ShowMovieActivity"></activity>
    </application>


</manifest>
